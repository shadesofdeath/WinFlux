<Window
    x:Class="WinFlux.Windows.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WinFlux"
    Width="600"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="#F0F5FF"
        BorderThickness="0"
        CornerRadius="12">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--  Logo  -->
                <Image
                    x:Name="appLogo"
                    Width="130"
                    Height="130"
                    Margin="0,0,0,40"
                    Source="/Assets/icon.png" />

                <!--  Başlık  -->
                <TextBlock
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    FontSize="34"
                    FontWeight="SemiBold"
                    Foreground="#333333"
                    Text="WinFlux" />

                <!--  Yükleme Durumu  -->
                <TextBlock
                    x:Name="statusText"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="#555555"
                    Text="{DynamicResource SplashScreen_Loading}" />

                <!--  İlerleme Çubuğu  -->
                <ProgressBar
                    x:Name="loadingBar"
                    Width="300"
                    Height="6"
                    Margin="0,0,0,20"
                    Background="#E0E0E0"
                    Foreground="#2271CC"
                    Maximum="100"
                    Minimum="0"
                    Value="0" />
            </StackPanel>
        </Grid>
    </Border>
</Window> 