<ui:Page
    x:Class="WinFlux.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="{DynamicResource SettingsPageTitle}">
    <StackPanel Margin="20">
        <TextBlock
            Margin="0,0,0,10"
            FontSize="16"
            Text="{DynamicResource SettingPageLanguage}" />
        <ComboBox
            x:Name="LanguageComboBox"
            Width="200"
            HorizontalAlignment="Left"
            SelectionChanged="LanguageComboBox_SelectionChanged" />
            
        <TextBlock
            Margin="0,30,0,10"
            FontSize="16"
            Text="{DynamicResource SettingPagePresets}" />
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button 
                x:Name="btnExportPresets" 
                Margin="0,0,10,0"
                Click="btnExportPresets_Click">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon 
                        Margin="0,0,5,0"
                        FontSize="14"
                        Icon="{x:Static ui:SegoeFluentIcons.Export}" />
                    <TextBlock Text="{DynamicResource SettingPageExportPresets}" />
                </StackPanel>
            </Button>
            <Button 
                x:Name="btnImportPresets" 
                Click="btnImportPresets_Click">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon 
                        Margin="0,0,5,0"
                        FontSize="14"
                        Icon="{x:Static ui:SegoeFluentIcons.Import}" />
                    <TextBlock Text="{DynamicResource SettingPageImportPresets}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</ui:Page>
